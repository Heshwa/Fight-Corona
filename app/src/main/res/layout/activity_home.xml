<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout1"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Home"
    android:background="@color/blue">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fight_corona"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/White"
        android:layout_marginTop="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    app:cardUseCompatPadding="true"
                    android:id="@+id/notes_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Medical Support"
                            android:textStyle="bold"
                            android:fontFamily="cursive"
                            android:textColor="@color/blue"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="cursive"
                            android:text="Ask your doubts directly to the doctors"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    app:cardUseCompatPadding="true"
                    android:id="@+id/news_analyser">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="News Analyser"
                            android:textStyle="bold"
                            android:fontFamily="cursive"
                            android:textColor="@color/blue"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="cursive"
                            android:text="Check the genuineness news you received."/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    app:cardUseCompatPadding="true"
                    android:id="@+id/corona_news">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Latest News on Corona"
                            android:textStyle="bold"
                            android:fontFamily="cursive"
                            android:textColor="@color/blue"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="cursive"
                            android:text="Get the latest News on Corona Virus"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="230dp"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    app:cardUseCompatPadding="true"
                    android:id="@+id/Supporting_candidate">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Support Others"
                            android:textStyle="bold"
                            android:fontFamily="cursive"
                            android:textColor="@color/blue"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="cursive"
                            android:text="Check the genuineness news you received."/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>





    </ScrollView>



</LinearLayout>